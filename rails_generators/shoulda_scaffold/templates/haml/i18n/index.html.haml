%h1= I18n.t('<%=singular_name%>.listing')

%table
  %tr
<% for attribute in attributes -%>
    %th= I18n.t('<%=singular_name%>.<%=attribute.name%>')
<% end -%>

  - for <%= singular_name %> in @<%= plural_name %>
    %tr
<% for attribute in attributes -%>
      %td= h <%= singular_name %>.<%= attribute.name %>
<% end -%>
      %td= link_to I18n.t('<%=singular_name%>.show'), <%= singular_name %>
      %td= link_to I18n.t('<%=singular_name%>.edit'), edit_<%= singular_name %>_path(<%= singular_name %>)
      %td= link_to I18n.t('<%=singular_name%>.destroy'), <%= singular_name %>, :confirm => I18n.t('<%=singular_name%>.sure'), :method => :delete

%p= link_to I18n.t('<%=singular_name%>.new'), new_<%= singular_name %>_path
